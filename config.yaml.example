# Polymarket-Kalshi Arbitrage Bot Configuration
# ==============================================
# Copy this file to config.yaml and edit with your settings

api:
  # Polymarket API endpoints
  polymarket_rest_url: "https://clob.polymarket.com"
  polymarket_ws_url: "wss://ws-subscriptions-clob.polymarket.com/ws/market"
  gamma_api_url: "https://gamma-api.polymarket.com"
  
  # Kalshi API endpoint
  kalshi_api_url: "https://api.elections.kalshi.com/trade-api/v2"
  
  # Authentication (use environment variables for security)
  # api_key: "YOUR_API_KEY_HERE"
  # api_secret: "YOUR_API_SECRET_HERE"
  # private_key: "YOUR_PRIVATE_KEY_HERE"
  
  # Request settings
  timeout_seconds: 30
  max_retries: 3
  retry_delay_seconds: 1

trading:
  # Markets to trade (empty list = auto-discover)
  markets: []
  
  # Arbitrage settings
  min_edge: 0.01           # 1% edge required
  bundle_arb_enabled: true
  
  # Market-making settings
  min_spread: 0.05         # 5c spread to act as market maker
  tick_size: 0.01
  mm_enabled: false        # Disabled for real data
  
  # Order sizing
  default_order_size: 5    # $5 per order
  min_order_size: 2
  max_order_size: 10
  
  # Execution settings
  slippage_tolerance: 0.02
  order_timeout_seconds: 60
  
  # Fees
  maker_fee_bps: 0         # 0% for maker
  taker_fee_bps: 150       # 1.5% for taker
  estimated_gas_per_order: 0.02

risk:
  # Position limits
  max_position_per_market: 15
  max_global_exposure: 50
  
  # Loss limits
  max_daily_loss: 10
  max_drawdown_pct: 0.15
  
  # Market filters
  trade_only_high_volume: false
  min_24h_volume: 10000
  
  # Market lists
  whitelist: []            # Only trade these markets
  blacklist: []            # Never trade these markets
  
  # Kill switch
  kill_switch_enabled: true
  auto_unwind_on_breach: false

mode:
  # Trading mode: "live" or "dry_run"
  trading_mode: "dry_run"
  
  # Data mode: "real" or "simulation"
  data_mode: "real"
  
  # Cross-platform arbitrage
  cross_platform_enabled: true
  kalshi_enabled: true
  min_match_similarity: 0.6
  
  # Dry run settings
  dry_run_initial_balance: 10000
  simulate_fills: true
  fill_probability: 0.8

# ==============================================
# Sportsbook Arbitrage (FanDuel, DraftKings, etc.)
# ==============================================
# Odds data via TheOddsAPI — get a free key at https://the-odds-api.com/
# Free tier: 500 credits/mo. Recommended: 20K tier ($30/mo) for continuous scanning.

sportsbooks:
  # TheOddsAPI key (or set ODDS_API_KEY env var)
  odds_api_key: "YOUR_ODDS_API_KEY"

  # Which sportsbooks to scan for arbitrage
  target_bookmakers:
    - fanduel
    - draftkings
    - betmgm
    - caesars
    - bovada

  # Which sports to scan (TheOddsAPI sport_key format)
  sports:
    - americanfootball_nfl
    - basketball_nba
    - baseball_mlb
    - icehockey_nhl

  # Region (determines which bookmakers are available)
  regions:
    - us

  # Betting markets to check
  markets:
    - h2h          # moneyline / head-to-head
    - spreads      # point spreads
    - totals       # over/under

  # Arb detection thresholds
  min_edge: 0.005            # 0.5% — minimum edge to flag cross-book arb
  min_edge_value_bet: 0.05   # 5%  — minimum edge to flag a value bet

  # How often to re-scan (seconds). Set higher to conserve API credits.
  scan_interval_seconds: 30

# ==============================================
# Budget Management
# ==============================================
# Total project budget: $1,000
#   - $60  for API costs (TheOddsAPI 2 months @ $30/mo)
#   - $200 initial betting bankroll (conservative start)
#   - $740 held in reserve (released after strategy is validated)
#
# Reserve release policy:
#   Reserve is unlocked in $100 increments only after 10+ settled bets
#   with a positive cumulative P&L.

budget:
  total: 1000.0
  api_allocation: 60.0
  initial_bankroll: 200.0
  reserve: 740.0
  max_single_bet: 50.0       # Hard cap: never bet > $50 on one leg
  max_arb_total: 100.0       # Hard cap: never risk > $100 across all legs of one arb

logging:
  level: "INFO"
  log_file: "logs/bot.log"

